{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "**/*"],
	"exclude": ["dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"forceConsistentCasingInFileNames": true,
		"types": ["node"],
		"paths": {
			"@components/*": ["src/components/*"],
			"@assets/*": ["src/assets/*"],
			"@layouts/*": ["src/layouts/*"],
			"@data/*": ["src/data/*"],
			"@styles/*": ["src/styles/*"],
			"@i18n/*": ["src/i18n/*"],
			"@types/*": ["src/types/*"]
		}
	}
}
